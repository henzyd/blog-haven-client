---
import Layout from "~/layouts/Layout.astro";
import Form from "~/modules/home/form";
import BlogList from "~/modules/home/blog-list";
---

<Layout>
  <div class="flex w-full justify-center px-4 py-8">
    <div class="flex w-full max-w-[800px] flex-col gap-6">
      <header class="w-full">
        <h1 class="text-2xl font-medium italic">BlogHaven</h1>
      </header>
      <div class="flex w-full flex-col gap-8 rounded-xl bg-white p-4">
        <div class="rounded-md border p-4">
          <Form client:load />
        </div>
        <BlogList client:load />
      </div>
    </div>
  </div>
</Layout>
